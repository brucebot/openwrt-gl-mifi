config system
	option hostname 'OpenWrt'
	option zonename 'Asia/Shanghai'
	option timezone 'CST-8'
	option ttylogin '0'
	option log_size '64'
	option urandom_seed '0'

config timeserver 'ntp'
	option enabled '1'
	option enable_server '1'
	list server 'ntp1.aliyun.com'
	list server 'ntp2.aliyun.com'
	list server 'ntp3.aliyun.com'
	list server 'ntp4.aliyun.com'
	list server 'ntp5.aliyun.com'
	list server 'ntp6.aliyun.com'
	list server 'ntp7.aliyun.com'

config led 'led_wlan'
	option name 'WLAN'
	option sysfs 'gl-mifi:green:wlan'
	option trigger 'phy0tpt'

config led 'led_wan'
	option name 'WAN'
	option sysfs 'gl-mifi:green:wan'
	option trigger 'netdev'
	option mode 'link tx rx'
	option dev 'eth0'

config led 'led_lan'
	option name 'LAN'
	option sysfs 'gl-mifi:green:lan'
	option trigger 'netdev'
	option mode 'link tx rx'
	option dev 'eth1'

config led 'led_3gnet'
	option name '3GNET'
	option sysfs 'gl-mifi:green:net'
	option trigger 'netdev'
	option dev 'wwan0'
	list mode 'link'
	list mode 'tx'
	list mode 'rx'